@model Product

<form method="post" asp-controller="Home" asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <input type ="hidden" asp-for="ProductId"/>
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input type ="text" asp-for="Name" class="form-control"/>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input type="text" asp-for="Price" class="form-control" />
    </div>

    <div class="input group mb-3"> 
       <input type="file" name="imageFile" id ="imageFile" class="form-control"/> 
    </div>
    <div>
        <img src="/img/@Model.Image" style="width:100px"/>
        <input type="hidden" asp-for="@Model.Image"/>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label"></label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
            <option>Hepsi</option>
        </select>
    </div>

    <div class="mb-3 form-check">
        <input type="checkbox" asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>